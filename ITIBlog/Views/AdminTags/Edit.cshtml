@model ITIBlog.Models.View.EditTagRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Welcome Admin , Edit an existing Tag </h1>
    </div>
</div>

<div class="container">
    @if (Model != null){
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly/> 
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
        </div>
        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Update</button>
                <button type="submit" class="btn btn-danger ms-3"
                     asp-area=""
                     asp-controller="AdminTags"
                     asp-action="Delete">
                    Delete
                </button>
            </div>
        </div>
        </form>
    }
    else
    {
        <h4>Tag Not Found</h4>
    }
</div>